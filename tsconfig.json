{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Custom paths */
    "baseUrl": "./",
    "paths": {
      "@starlink/apis/*": ["src/apis/*"],
      "@starlink/modules/*": ["src/modules/*"],
      "@starlink/components/*": ["src/components/*"],
      "@starlink/assets/*": ["src/assets/*"],
      "@starlink/configs/*": ["src/configs/*"],
      "@starlink/routes/*": ["src/routes/*"],
      "@starlink/store/*": ["src/store/*"],
      "@starlink/utils/*": ["src/utils/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
